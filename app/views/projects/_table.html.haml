= table_for(collection) do |t|
  = t.data do
    = t.cell :name
    = t.cell :user, :heading => 'Owner'
    = t.cell(:view, :heading => '', :cell_html => {:class => 'actions'}) {|project| link_to('View', project) }
    = t.cell(:edit, :heading => '', :cell_html => {:class => 'actions'}) {|project| link_to('Edit', edit_project_path(project)) }
    = t.cell(:remove, :heading => '', :cell_html => {:class => 'actions'}) {|project| link_to('Remove', project, :confirm => 'Are you sure?', :method => :delete) }

= simple_form_for [@brief, @labour_input] do |f|
  = form_errors(f)
  .inputs
    = f.input :job_name, :label => 'Job', :as => :autocomplete, :url => autocomplete_job_name_brief_goals_labour_inputs_path
    = f.input :implementation_amount, :as => :amount_per_period, :label => 'Implementation Time'
    = f.input :maintenance_amount, :as => :amount_per_period, :label => 'Maintenance Time'
  .actions
    = f.button :submit, :class => 'primary'
    = link_to 'Cancel', @brief, :class => "btn"

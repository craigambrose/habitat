= table_for(features) do |t|
  = t.data do
    = t.cell :name
    = t.cell :description, :cell_html => {:class => 'details'}
    - if can? :edit, @brief
      = t.cell('', :cell_html => {:class => 'actions'}) {|feature| link_to('Edit', edit_brief_goals_feature_path(@brief, feature)) }
      = t.cell('', :cell_html => {:class => 'actions'}) {|feature| link_to('Remove', [@brief, feature], :confirm => 'Are you sure?', :method => :delete) }
  - if can? :create, Goals::Feature
    = table_link_footer t, 'Add Another', new_brief_goals_feature_path(@brief)

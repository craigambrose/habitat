= simple_form_for [@site, @yield_goal], :wrapper => :inline, :html => {:multipart => true} do |f|
  = form_errors(f)
  = f.input :details, :input_html => {:rows => 2, :class => 'xxlarge'}
  .actions
    = f.button :submit, :class => 'primary'
    = link_to 'Cancel', site_goals_path(@site), :class => "btn"

= simple_form_for @site, :wrapper => :inline do |f|
  - if f.error_notification
    .alert-message.warning.fade.in{"data-alert" => "alert"}
      %a.close{:href => "#"} Ã—
      %p= f.error_notification
  = field_set_tag "Site" do
    = f.input :name, :input_html => { :class => "span8" }, :hint => "add your site title here"
    = f.input :address, :input_html => { :class => "span8" }
  .actions
    = f.button :submit, :class => 'primary'
    = button_tag 'Cancel', :type => :reset, :class => "btn"

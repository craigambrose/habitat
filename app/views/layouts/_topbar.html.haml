.topbar
  .topbar-inner
    .container
      %a.brand{:href => "/"} Habitat
      %ul.nav
        - if user_signed_in?
          - if current_user.project
            %li= link_to "Project", project_path(current_user.project)
          - else
            %li= link_to "New Project", new_project_path

          - if current_user.role == 'admin'
            %li.dropdown{"data-dropdown" => "dropdown"}
              %a.dropdown-toggle{:href => "#"} Admin
              %ul.dropdown-menu
                - if can?(:manage, Project)
                  %li= link_to "Projects", projects_path
                - if can?(:manage, User)
                  %li= link_to "Users", admin_users_path
                - if can?(:manage, Use)
                  %li= link_to "Uses", uses_path
                - if can?(:manage, Job)
                  %li= link_to "Jobs", jobs_path
      .pull-right
        - if current_user
          %p
            Welcome, #{current_user.name}
            = link_to "Log-out", '/users/sign_out', :method => :delete
        - else
          %ul.nav
            %li= link_to "Log-in", '/users/sign_in'
            %li= link_to "Sign-up", '/users/sign_up'

- if @project && !@project.new_record?
  - semantic_navigation :main, :html => {:class => 'tabs step_tabs'} do |n|
    = n.item 'Project', :link => project_path(@project), :highlights_on => controllers_array('projects')
    = n.item 'Goals', :link => brief_path(@project.brief), :highlights_on => controllers_array('briefs', 'goals/yields', 'goals/features', 'goals/budget_items', 'goals/labour_inputs')
    - if Rails.env == 'production'
      = n.item 'Site Analysis', :link => '/', :disabled_if => proc { true }
    - else
      = n.item 'Site Analysis', :link => site_path(@project.site), :highlights_on => controllers_array('site', 'soils', 'patches', 'soil_tests', 'soil_test_results')
    = n.item 'Design', :link => '/', :disabled_if => proc { true }
    = n.item 'Implement', :link => '/', :disabled_if => proc { true }
    = n.item 'Maintain', :link => '/', :disabled_if => proc { true }
- elsif params[:controller] != 'projects'
  = render_breadcrumbs